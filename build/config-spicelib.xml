<?xml version="1.0"?>
<flex-config>

	<compiler>
      
		<source-path>
      		<path-element>${project}/src/spicelib</path-element>
    	</source-path>
    	
		<external-library-path>
			<path-element>${flexlib}/libs/player/9/playerglobal.swc</path-element>
			<path-element>${flexlib}/libs/flex.swc</path-element>

			<path-element>${project}/libs/spicelib-util-3.0.0.swc</path-element>
			<path-element>${project}/libs/spicelib-reflect-3.0.0.swc</path-element>
			<path-element>${project}/libs/spicelib-commands-3.1.0.swc</path-element>
			<path-element>${project}/libs/spicelib-xml-mapper-3.0.1.swc</path-element>
			<path-element>${project}/libs/spicelib-logging-3.0.0.swc</path-element>

			<path-element>${project}/libs/parsley-core-3.0.M1.swc</path-element>
			<path-element>${project}/libs/parsley-xml-3.0.M1.swc</path-element>
		</external-library-path>
		
		<namespaces>
	      	<namespace>
	        	<uri>http://www.spicefactory.org/parsley</uri>
	        	<manifest>${project}/build/manifest-spicelib.xml</manifest>
	      	</namespace>
	    </namespaces>
	    
		<warn-no-constructor>false</warn-no-constructor>
	    <verbose-stacktraces>true</verbose-stacktraces>
	    <debug>true</debug>
	    
	</compiler>
	
  	<include-namespaces>
    	<uri>http://www.spicefactory.org/parsley</uri>
  	</include-namespaces>
  	
  	<include-file>
  		<name>design.xml</name>
  		<path>${project}/src/spicelib/design.xml</path>
  	</include-file>
  	    
  	<output>${release}/parsley-logging-spicelib-${version}.swc</output>
	    
</flex-config>